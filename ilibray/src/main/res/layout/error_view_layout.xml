<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/ev_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:src="@drawable/error_view_cloud"/>

    <TextView
        android:id="@+id/ev_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/error_view_oops"
        android:textColor="@color/error_view_title"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/ev_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/error_view_subtitle"
        tools:text="网络无法访问，请检查你的网络连接"/>

    <TextView
        android:id="@+id/ev_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/error_view_retry_button_background"
        android:padding="8dp"
        android:text="@string/error_view_retry"
        android:textColor="@color/error_view_retry"
        android:textStyle="bold"/>
</merge>